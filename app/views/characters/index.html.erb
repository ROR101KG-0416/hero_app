<h1>Characters</h1>

<% if current_user %>
  <%= link_to "Create New Character", new_character_path %>
<% end %>

<table>
  <tr>
    <th></th>
    <th>Alias</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Universe</th>
    <% if current_user %>
      <th></th>
    <% end %>
  </tr>
  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= image_tag character.photo.url(:small) %></td>
        <td><%= link_to(character.alias, character_path(character)) %></td>
        <td><%= character.first_name %></td>
        <td><%= character.last_name %></td>
        <td><%= character.universe.try(:name) %></td>

        <% if current_user %>
          <td>
            <%= link_to "edit", edit_character_path(character) %>
            <%= link_to "delete", character_path(character), method: :delete, data: {confirm: "Are you sure you want to delete this character?"} %>
          </td>
        <% end %>
      
      </tr>
    <% end %>
  </tbody>
</table>


