<tr>
  <td><%= image_tag character.photo.url(:small) %></td>
  <td><%= link_to(character.alias, character_path(character)) %></td>
  <td><%= character.first_name %></td>
  <td><%= character.last_name %></td>
  <td><%= character.universe.try(:name) %></td>

  <% if current_user %>
    <td>
      <%= link_to "edit", edit_character_path(character) %>
      <%= link_to "delete", character_path(character), method: :delete, data: {confirm: "Are you sure you want to delete this character?"}, remote: true, class: "delete-user" %>
    </td>
  <% end %>
</tr>