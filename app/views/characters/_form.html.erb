<%= form_for @character do |f| %>

  <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% @character.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <%= f.label :alias %><br>
    <%= f.text_field :alias %>
  </p>

   <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>

   <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </p>

  <p>
    <%= f.label :universe %><br>
    <%= collection_select(:character, :universe_id, Universe.all, :id, :name, include_blank: true) %>
  </p>

  <p>
    <%= f.label :ability, "Abilities" %> <br>
    <%= collection_check_boxes(:character, :ability_ids, Ability.all, :id, :name) %>
  </p>

  <%= f.submit %>
<% end %>












